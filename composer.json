{
    "name": "ruffle-labs/product-core",
    "description": "Product catalogue for your Laravel application",
    "type": "laravel-plugin",
    "license": "MIT",
    "keywords": ["laravel", "e-commerce"],
    "authors": [
        {
            "name": "Ben Clayton",
            "email": "Ben@benclayton.me"
        }
    ],
    "require": {
        "php": "^7.0",
        "illuminate/support": "5.5.*",
        "spatie/laravel-medialibrary": "^6.0.0",
        "league/flysystem-aws-s3-v3": "~1.0"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~6.0",
        "spatie/phpunit-watcher": "^1.3",
        "orchestra/testbench": "~3.5"
    },
    "autoload": {
        "psr-4": {
            "RuffleLabs\\ProductCore\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RuffleLabs\\ProductCore\\Tests\\": "tests/"
        },
        "files": ["tests/Utilities/ProductHelpers.php"]
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    }
}
